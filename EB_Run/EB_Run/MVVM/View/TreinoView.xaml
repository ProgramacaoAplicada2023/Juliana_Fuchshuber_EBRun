<UserControl x:Class="EB_Run.MVVM.View.TreinoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EB_Run.MVVM.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <StackPanel Margin="20,0,20,0">
            <TextBlock Text="MONTE SEU TREINO"
                       FontFamily="Franklin Gothic Heavy"
                       Foreground="White"
                       FontSize="30"
                       HorizontalAlignment="Center"
                       Margin="40"/>
            <TextBlock Text="Insira seu nome"
                       Foreground="White"
                       FontFamily="Franklin Gothic Medium"
                       FontSize="14"/>
            <TextBox Margin="0,5,0,10"
                     Style="{StaticResource NameTextbox}"/>
            <TextBlock Text="Ciclo de treino"
                       Foreground="White"
                       FontFamily="Franklin Gothic Medium"
                       FontSize="14"/>
            
            <StackPanel Orientation="Horizontal">
                <RadioButton Content="10 Semanas"
                             Style="{StaticResource CicloButton}"
                             Margin="15"/>
                <RadioButton Content="14 Semanas"
                             Style="{StaticResource CicloButton}"
                             Margin="15"/>
            </StackPanel>

            <TextBlock Text="Resultado na última prova (em metros)"
                       Foreground="White"
                       FontFamily="Franklin Gothic Medium"
                       FontSize="14"/>
            <TextBox Margin="0,5,0,10"
                     Style="{StaticResource NameTextbox}"/>
            
            <TextBlock Text="Ganho de distância para a próxima prova"
                       Foreground="White"
                       FontFamily="Franklin Gothic Medium"
                       FontSize="14"/>
            <ComboBox Style="{StaticResource GanhoDistanciaButton}"/>
        </StackPanel>

        
    </Grid>
</UserControl>
